{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "ES2020",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "lib": [
      "dom",
      "ES2020"
    ],
    "types": ["svelte"],
    "module": "esnext"
  },
  "include": [
    "Scripts/svelte/**/*"
  ],
  "exclude": [
    "node_modules",
    "wwwroot"
  ],
  "extends": "@tsconfig/svelte/tsconfig.json"
}
